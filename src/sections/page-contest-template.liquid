<div id="page_contest_template"
     class="page-contest-template"
     data-section-id="{{ section.id }}"
     data-section-type="page-contest-template"
>
    {% if section.settings.image != blank %}
        <div class="top-banner">
            {% assign type = section.settings.image %}
            {%- if type.size > 0 -%}
                {% assign img_url = type | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                {% assign imageid = image.id %}

                <div class="box-ratio top-hero-img">
                    <img class="lazyload lazyload-fade"
                         id="{{ imageid }}"
                         data-src="{{ img_url }}"
                         data-sizes="auto"
                         alt="{{ type.alt | escape }}">
                    {% if section.settings.heading != blank %}
                        <h1 class="top-hero-heading">{{ section.settings.heading }}</h1>
                    {% endif %}
                </div>
            {%- endif -%}

            <noscript>
                <img src="{{ section.settings.image | img_url: '1024x' }}" alt="{{ section.settings.image.alt }}">
            </noscript>
        </div>
    {% endif %}

    <div id="content" class="row">
        <div class="desktop-9 tablet-6 mobile-3 page-contest">

            <!--<h1 class="page-title">{{ page.title }}</h1>-->

            <div class="share-icons">
                <span class="share-text">Follow us:</span>
                <a href="//www.facebook.com/sharer.php?u={{ shop.url }}{{ page.url }}"
                   class="facebook" target="_blank"
                ><i class="fa fa-facebook fa-2x"></i></a>
                <a class="instagram" target="blank"
                   href="https://www.instagram.com/muckbootco/?hl=en"
                ><i class="fa fa-instagram fa-2x"></i></a>
                <a href="//www.youtube.com/channel/UCDojhS0yZvveLz5JlHOwdhQ"
                   target="_blank" rel="noopener noreferrer" class="youtube"
                ><i class="fa fa-youtube-play fa-2x"></i></a>
            </div>

            <div class="page-content-field">
                {{ page.content }}
            </div>
            {% include 'contest-form' %}
        </div>
    </div>
</div>


