<div class="about-container">
	<div class="about-block" style="background-color:{{ section.settings.about_text_color }}">
		{{ section.settings.about_text }}
	</div>

	{% for block in section.blocks %}
	  <div class="block" {% if block.type == 'html' %}style="background-color:{{ block.settings.html_block_color }}"{% endif %}> 	  {% if block.type == 'image_picker' %}
	    <img src="{{ block.settings.image_picker_block | img_url: '800x' }}" />
	  	{% elsif block.type == 'html' %}
	  	{{ block.settings.html_block }}
	  	{% else %} 
	      {% if block.settings.video_url_block.type == "youtube" %}
	      <a class="fancybox" data-type="iframe" href="//www.youtube.com/embed/{{ block.settings.video_url_block.id }}?rel=0&showinfo=0&vq=720" title="youtube">
		  		<img src="{{ block.settings.video_image_block | img_url: '800x' }}" />
		  	</a>
	      {% elsif block.settings.video_url_block.type == "vimeo" %}
	      <a class="fancybox" data-type="iframe" href="//player.vimeo.com/video/{{ block.settings.video_url_block.id }}?byline=0&portrait=0&badge=0" title="youtube">
		  		<img src="{{ block.settings.video_image_block | img_url: '800x' }}" />
		  	</a>      
	      {% endif %}	  	
	  	{% endif %}
	  </div>
	{% endfor %}
</div>

<style>
	.homepage-section  {
		margin-bottom: 0;
	}
	.about-container {
		display: flex;
	  flex-wrap: wrap;  
	}
	.about-block {
		width: 100%;
	}
	.block {
	  width: 50%;
	}
	@media screen and ( max-width: 740px ) {
    .block {
		  width: 100%;
		}
  }
	.block img {
	  width: 100%;
	  height: 100%;
	}  
</style>

<script>
	jQuery(document).ready(function($){
	    $(".fancybox").on("click", function(){
	        $.fancybox({
	          href: this.href,
	          type: $(this).data("type")
	        }); // fancybox
	        return false   
	    }); // on
	}); // ready
</script>

{% schema %}  
  {
    "name": "Collection page", 
    "settings": [
      {
        "type": "html",
        "id": "about_text",
        "label": "About Text"
      },
      {
        "type": "color",
        "id": "about_text_color",
        "label": "About Text Background Color"     	
      }   
    ],
    "blocks":[
    {
      "type":"html",
      "name":"HTML Block",
      "settings":[
        {
         "type": "html",
         "id": "html_block",
         "label": "HTML Block"
        },
		    {
		      "type": "color",
		      "id": "html_block_color",	
		      "label": "HTML Block Background Color"     	
		    }       
      ]
    },
    {
      "type":"image_picker",
      "name":"Image Block",
      "settings":[
        {
          "type": "image_picker",
          "id": "image_picker_block",
          "label": "Image Block"
        }  
      ]
    },
    {
      "type":"video_url",
      "name":"Lightbox Video Block",
      "settings":[
  	  	{
		      "type": "video_url",
		      "id": "video_url_block",
		      "label": "YouTube or Vimeo link",
		      "accept": ["youtube", "vimeo"]
		    },      
        {
          "type": "image_picker",
          "id": "video_image_block",
          "label": "Image Block"
        }
      ]
    }
    ]
  }
{% endschema %}