/*  BADGE : Core Styles
 * ---------------------------------------------- */
$shapeSquareBg: {{ settings.product_badge_square_bg }};
$shapeCircleBg: {{ settings.product_badge_circle_bg }};
$shapeDiamondBg: {{ settings.product_badge_diamond_bg }};
$textColor: {{ settings.product_badge_text_color }};
$badgeSize: 72px;

.item-badge {
    @include flexbox;
    @include justify-content( center );
    @include align-items( center );
    position: absolute;
    width: $badgeSize;
    height: $badgeSize;
    top: 0;
    right: 0;
    z-index: 20;
    background: $shapeSquareBg; //Fallback : If shape class is not recognized

    .item-badge-text {
        @include h6;
    	color: $textColor;

        &.tiny { 
            @include fontSize( 11px ); 
            line-height: 0.9rem; // rem so font-sizing wont affect spacing
        }
        &.small { 
            @include fontSize( 12px );
            line-height: 0.95rem; 
        }
        &.medium { 
            @include fontSize( 14px );
            line-height: 1.15rem; 
        }
        &.large { @include fontSize( 16px ); }
    }

    &.circle {
    	border-radius: calc( ( #{$badgeSize} + 8px ) / 2 );
    	background: $shapeCircleBg;
        width: calc( #{$badgeSize} + 8px ); // Circle is larger in mocks
        height: calc( #{$badgeSize} + 8px ); // Circle is larger in mocks
    }

    &.diamond {
    	transform: rotate( 45deg );
    	background: $shapeDiamondBg;
        width: calc( #{$badgeSize} - 8px ); // Diamond is smaller in mocks
        height: calc( #{$badgeSize} - 8px ); // Diamond is smaller in mocks
        right: 20px;
        top: 20px;

    	.item-badge-text {
    		position: relative;
		    transform: rotate( -45deg );
    	}
    }
}