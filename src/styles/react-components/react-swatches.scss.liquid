
// Styles for React-Swatches component
.swatch-list,
.swatch-spacer {
	@include inline-flex;
	@include justify-content( center );
	@include align-items( center );
	position: relative;
	width: auto;
	max-width: 100%;
	height: 40px;
	margin: 10px 0;
}

.swatch-list {

	.swatch-item-wrap {
		position: relative;
	    width: 22px;
	    height: 22px;

	    &:hover,
	    &.active {
	    	.swatch-highlight {
	    		opacity: 1;
	    	}
	    }

		.swatch-highlight {
			position: absolute;
		    width: 19px;
		    height: 19px;
		    border: 1px solid #9a9a9a;
		    border-radius: 20px;
		    left: 50%;
		    top: 50%;
		    transform: translate( -50%, -50% );
		    opacity: 0;
		    transition: opacity 0.25s ease-in-out;
		}

		.swatch-item {
			position: relative;
			left: 50%;
			top: 50%;
		    width: 13px;
		    height: 13px;
		    transform: translate( -50%, -50% );
		    background: #999999;
		    border-radius: 15px;
		    cursor: pointer;

			// STUBS, Don't use this fully
			&.Red 		{ background: #e80076; }
			&.Orange 	{ background: #e88000; }
			&.Yellow 	{ background: #fff707; }
			&.Green 	{ background: #07ff5f; }
			&.Blue 		{ background: #0ff0ff; }
			&.Indigo 	{ background: #5b07ff; }
			&.Violet 	{ background: #ab07ff; }
		}
	}
}