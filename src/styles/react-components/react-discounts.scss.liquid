/*  DISCOUNTS : Core Styles
 * ---------------------------------------------- */
$modalBg: {{ settings.background }};
$modalText: {{ settings.text_color }};
$modalMessage: $color--dark-green-1; //Header Msg on modal items being given
$modalButtonBg: $color--dark-green-1;
$modalButtonText: {{ settings.button_text }};
$modalButtonAltBg: $color--orange-1;
$modalButtonAltText: {{ settings.button_text }};


#react-discount-modal {
    background: rgba( 0, 0, 0, 0.7 );
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.25s ease-in-out;

    &.show-modal {
    	opacity: 1;
    	z-index: 200;
    	pointer-events: all;
    }

    #react-discount-modal-content {
	    position: absolute;
	    width: 90vw;
	    max-width: 400px;
	    background: $modalBg;
	    left: 50%;
	    top: 5vw;
	    transform: translateX( -50% );

	    .modal-item {
		    position: relative;
		    width: 100%;
		    padding: 10px;
		    text-align: center;

		    &:not(:last-child) {
			    border-bottom: 1px solid #D0D0D0;
			}

		    // HEADING : Modal headline
		    .modal-item-message {
		    	@include fontDim( 20px, 22px, 0 );
		    	font-weight: $font-weight--bold;
		    	color: $modalMessage;
		    	position: relative;
		    	margin: 10px 0;
		    	padding: 0 20px;
		    	text-transform: uppercase;
		    }

		    // IMAGE : Modal image 
		    .modal-item-image {
			    width: 100%;
			    height: 270px;
			    background-size: contain;
			    background-repeat: no-repeat;
			    background-position: center;
			    margin-bottom: 15px;
			}

			// TITLE : Item Being offered
			.modal-item-title {
				@include fontDim( 18px, 18px, 0 );
		    	font-weight: $font-weight--medium;
		    	color: $modalText;
		    	margin-bottom: 15px;
			}

			// BUTTONS : "Add to Cart" + "No Thanks" Buttons
			.modal-item-buttons {

				// Prevent multiple clicks
				&.disable-buttons {
					pointer-events: none;
					opacity: 0.9;
				}

				[class^='modal-item-btn'], 
				[class*=' modal-item-btn'] {
					@include fontDim( 16px, 16px, 0 );
					font-weight: $font-weight--bold;
					background: $modalButtonBg;
					color: $modalButtonText;
					margin-right: 5px;
				}

				// "No Thanks" Button
				.modal-item-btn-no {
					background: $modalButtonAltBg;
					color: $modalButtonAltText;
					margin-right: 0;
					margin-left: 5px;
				}
			}
	

			



			// REMOVED DISCOUNTS MODAL : 
			&.removed-discounts {
				.modal-item-message {
					@include fontDim( 18px, 20px, 0 );
					padding: 0;
				}

				.modal-item-removal-list {
				    position: relative;
				    list-style: none;
				    padding: 0;
				    margin: 30px 0 35px;

				    .modal-removal-item {
				    	width: 100%;
				    	height: 40px;
				    	@include inline-flex;
				    	@include align-items( center );

				    	.modal-removal-image {
						    width: 47px;
						    height: 100%;
						    background-repeat: no-repeat;
						    background-size: cover;
						    margin-right: 5px;
						}

						.modal-removal-title {
							@include fontDim( 16px, 16px, 0 );
							font-weight: $font-weight--medium;
							text-align: left;
							width: 100%;
						}
				    }
				}

				.modal-item-btn-confirm {
					margin: 0 0 10px;
					width: 200px;
				}
			}
				
		}
	}
}
