.swatch {
  @include flexbox;
  @include flex-wrap(wrap);
  margin-bottom: 15px;

  // swatch header

  .swatch-header {
    width: 100%;
    margin-bottom: 16px;
  }

  h5, 
  .current-option {
    display: inline;
    color: $color--dark-green-1;    
    @include fontSize(14px);
    letter-spacing: .225em;
    text-transform: uppercase;

    @include mq('tablet-and-up') {
      @include fontSize(16px);
      letter-spacing: .25em;
    }
  }

  // swatch main label
  h5 { 
    font-weight: $font-weight--black;
  }

  // swatch current option 
  .current-option { 
    margin-left: .5em;
    font-weight: $font-weight--medium;
  }

  // swatch loop

  label { // actual visible swatch
    height: 37px !important;
    margin-left: 0 !important;
    margin-right: 5px !important;
    margin-bottom: 5px;
    border: solid 1px $color--border-gray;
    color: $color--gray-3;
    @include fontSize(15px);
    font-weight: $font-weight--book;
    letter-spacing: .025em;
    line-height: 37px !important;

    // SIZE SQUARES : Improve size alignment for small and large size squares so they map cleanly into the spacing
    &.size {
      width: calc( 100% + 5px ); // 100% + 5 so we can cheat the right margin to account for long and short size tags ("Youth 6" vs "5.5")

      // Size : "5" or "5.5" or "10.5"
      .swatch-element.short-label label {
        width: 46px; //So half sizes = whole size boxes
      }

      // Size : "Youth 6" or "Wide 6"
      .swatch-element.long-label label {
        width: 97px; //So half sizes = whole size boxes
      }
    }
  }

  label:hover {
    background-color: $color--dark-green;
    border-color: $color--dark-green;
    color: $color--white;
  }

  input:checked + label {
    background-color: $color--dark-green;
    border-color: $color--dark-green;
    color: $color--white;
  }

  // soldout 
  .swatch-element.soldout {
    label:hover {
      background-color: inherit;
      border-color: $color--border-gray;
      color: $color--gray-3;      
    }
    input:checked + label {
      background-color: inherit;
      border-color: $color--dark-green;
      color: $color--gray-3;
    }
  }

  // Color Swatches

  .swatch-element.color {
    label {
      position: relative;
      width: 23px !important;
      height: 23px !important;
      min-width: 0 !important;
      border: solid 1px $color--white;
      border-radius: 50%;
      background-color: $color--light-gray; // shows a default color until we get swatch images up
      margin-right: 16px !important;
      margin-bottom: 16px !important;
      background-size: contain;
      background-position: center;
      background-repeat: no-repeat;

      &:after {
        content: '';
        display: block;
        position: absolute;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        left: -7px;
        top: -7px;
        border: solid 1px transparent;
      }
    }
    label:hover {
      background-color: inherit;

      &:after {
        border-color: $color--border-gray;
      }
    }
    input:checked + label {
      background-color: inherit;
      box-shadow: none;

      &:after {
        border-color: $color--border-gray;  
      }
    }
  }
  .swatch-element.color[data-swatch-value="White"],
  .swatch-element.color[data-swatch-value="white"] {
    label {
      border: solid 1px $color--border-gray;

    }
  }

  // Tooltip

  .tooltip {
    display:block;
    position:absolute;
    left: 50%;
    margin-left: -8px;
    bottom: 100%;
    z-index: 10000;

    margin-bottom: 15px;
    padding: 4px 6px;
    background: $color--dark-green;

    /* Make it invisible by default */
    filter:alpha(opacity=0);
    -khtml-opacity: 0;
    -moz-opacity: 0;
    opacity:0;
    visibility:hidden;

    color: $color--white;
    @include fontSize(12px);
    font-weight: $font-weight--medium;
    text-align: center;

    /* Animations */
    -webkit-transform: translate(-50%, 10px);
    -moz-transform: translate(-50%, 10px);
    -ms-transform: translate(-50%, 10px);
    -o-transform: translate(-50%, 10px);
    transform: translate(-50%, 10px);

    -webkit-transition: opacity .25s ease-out, transform .25s ease-out;
    -moz-transition: opacity .25s ease-out, transform .25s ease-out;
    -ms-transition: opacity .25s ease-out, transform .25s ease-out;
    -o-transition: opacity .25s ease-out, transform .25s ease-out;
    transition: opacity .25s ease-out, transform .25s ease-out;

    -webkit-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
    -moz-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
    -ms-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
    -o-box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);
    box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.28);

    &:before {
      bottom:-20px;
      content:" ";
      display: block;
      height: 20px;
      left: 0;
      position: absolute;
      width: 100%;
    }    
    &:after {
      border-left: solid transparent 10px;
      border-right: solid transparent 10px;
      border-top: solid $color--dark-green 10px;
      bottom: -10px;
      content: " ";
      height: 0;
      left: 50%;
      margin-left: -10px;
      position: absolute;
      width: 0;
    }
  }

  @include mq( 'lap-and-up' ) {
      .swatch-element:hover .tooltip {
        filter: alpha(opacity=100);
        -khtml-opacity: 1;
        -moz-opacity: 1;
        opacity: 1;
        visibility: visible;
        -webkit-transform: translate(-50%,0px);
        -moz-transform: translate(-50%,0px);
        -ms-transform: translate(-50%,0px);
        -o-transform: translate(-50%,0px);
        transform: translate(-50%,0px);
      }
  }
}

