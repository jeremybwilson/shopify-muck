div#contest_form_container {
    width: 100%;
    max-width: 767px;
    margin: 0 auto;
    padding: 0 15px;
}

	div#contest_form_container form#contest_form label {
	    width: 30%;
	    display: inline-block;
	    text-align: right;
	    padding: 0 15px;
	    box-sizing: border-box;
	}
	div#contest_form_container form#contest_form label[for="other_interest"] {
    width: 100%;
    text-align: left;
    padding-left: 0;
    margin-top: 15px;
}
	div#contest_form_container form#contest_form label[for="other_feedback"] {
    width: 100%;
    text-align: left;
    padding-left: 0;
    margin-top: 15px;
}
	div#contest_form_container form#contest_form input, div#contest_form_container form#contest_form select {
    width: 69% !important;
    display: inline-block;
    /* float: left; */
}
div#contest_form_container form#contest_form label[for="interest"] {
    width: 30%;
    text-align: right;
    margin-bottom: 15px;
    padding-left: 0;
    display: inline-block;
    float: left;
}
div#contest_form_container .kilo {
    width: 70%;
    display: inline-block;
    float: left;
}
div#contest_form_container form#contest_form input[type="checkbox"] {
    width: 15px !important;
}
div#contest_form_container form#contest_form label[for="product_feedback"] {
    width: 30%;
    text-align: right;
    margin-bottom: 15px;
    padding-left: 0;
    display: inline-block;
    float: left;
}
div#contest_form_container form#contest_form label[for="other_feedback"] + input {
    margin-top: 0px;
}
div#contest_form_container .clearfix.large_form + p + div {
    padding-left: calc(30% + 0px);
    text-align: left;
}
div#contest_form_container .clearfix.large_form + p + div input[type="checkbox"] {
    margin-left: 0 !important;
}
div#contest_form_container .action_bottom {
    padding-left: 30%;
}
div#contest_form_container .action_bottom input.secondary.button {
    width: 100% !important;
    max-width: 100% !important;
    display: block !important;
}
.clearfix.large_form + p {
    padding-left: 30%;
}
div#contest_form_container form#contest_form label span {
    color: red;
}
label.error {
    font-size: 12px;
    font-weight: 400;
    color: red;
    text-align: left;
    width: 100% !important;
    float: left;
    margin-top: -10px;
}


@media (max-width:767px){

div#contest_form_container form#contest_form label {
    width: 100%;
    display: block;
    text-align: left;
    padding: 0 0px;
    box-sizing: border-box;
}
div#contest_form_container form#contest_form input, div#contest_form_container form#contest_form select {
    width: 100% !important;
}
div#contest_form_container form#contest_form label[for="interest"]{
	padding-left: 0 !important;
    text-align: left;
    width: 100%;
}
div#contest_form_container form#contest_form input[type="checkbox"] {
    margin-left: 0 !important;
}
div#contest_form_container form#contest_form label[for="product_feedback"], div#contest_form_container .clearfix.large_form + p + div{
	padding-left: 0 !important;
    width: 100%;
    text-align: left;
}
div#contest_form_container .action_bottom {
    margin-top: 20px !important;
    margin-bottom: 20px !important;
    padding-left: 0 !important;
}
div#contest_form_container form#contest_form input[type="checkbox"] {
    margin-left: 0 !important;
    width: 20px !important;
    float: left !important;
    display: inline-block !important;
    max-width: 20px !important;
    min-width: auto;
}
.clearfix.large_form + p {
    padding-left: 0%;
}
}