
#contest_form_container {
    border-top: 1px solid $color--light-gray;
    margin: 10px auto;
    padding: 30px 10px;
    width: 100%;

    form {
        margin: auto;
        max-width: 600px;

        .large_form {
            padding-bottom: 10px;

            input[type=text],
            select {
                max-width: $form-element-width;
                height: 47px;
                line-height: 47px;
                font-size: 18px;
                padding: 0 10px;
            }

            label {
                color: $color--gray-2;
                margin-bottom: 5px;
                max-width: $form-element-width;

                .clsRequiredFieldLable {
                    color: {{settings.nav_links_hover}};
                }
            }

            label.error {
                font-size: 12px;
                font-weight: 400;
                color: {{settings.nav_links_hover}};
                text-align: left;
                margin-top: -10px;
            }

            .custom-select-wrapper {
                .icon-down {
                    display: inline-block;
                    max-width: $form-element-width;
                    position: relative;
                    width: 100%;

                    &:after {
                        position: absolute;
                        right: 5px;
                        top: 45%;
                        border-bottom: none;
                        border-left: 5px solid transparent;
                        border-right: 5px solid transparent;
                        border-top: 8px solid {{settings.nav_links_hover}};
                        transition: all 0.25s ease-in-out;
                        margin-top: -5px;
                        content: ' ';
                        pointer-events: none;
                        z-index: 25;
                    }
                }
            }

            fieldset {
                border: 1px solid $color--border-gray;
                color: $color--gray-2;
                margin-bottom: 0;
                max-width: $form-element-width;
                padding: 15px 20px;

                .kilo {
                    display: inline-block;
                    margin: auto;
                    width: 40%;
                }
            }

            /* The container */
            .container {
                display: block;
                position: relative;
                padding-left: 35px;
                margin-bottom: 12px;
                cursor: pointer;
                -webkit-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                user-select: none;

                /* Hide the browser's default checkbox */
                input {
                    position: absolute;
                    opacity: 0;
                    cursor: pointer;
                    height: 0;
                    width: 0;
                }

                /* Create a custom checkbox */
                .checkmark {
                    background-color: $color--light-gray;
                    border: 1px solid {{settings.nav_links_hover}};
                    position: absolute;
                    top: 0;
                    left: 0;
                    height: 20px;
                    width: 20px;
                }

                /* On mouse-over, add a grey background color */
                &:hover input ~ .checkmark {
                    background-color: $color--light-gray;
                }

                /* When the checkbox is checked, add a blue background */
                input:checked ~ .checkmark {
                    background-color: {{settings.nav_links_hover}};
                }

                /* Create the checkmark/indicator (hidden when not checked) */
                .checkmark:after {
                    content: "";
                    position: absolute;
                    display: none;
                }

                /* Show the checkmark when checked */
                input:checked ~ .checkmark:after {
                    display: block;
                }

                /* Style the checkmark/indicator */
                .checkmark:after {
                    left: 7px;
                    top: 3px;
                    width: 5px;
                    height: 10px;
                    border: solid white;
                    border-width: 0 3px 3px 0;
                    -webkit-transform: rotate(45deg);
                    -ms-transform: rotate(45deg);
                    transform: rotate(45deg);
                }
            }
        }

        .action_bottom {
            width: 100%;

            input[type=submit] {
                background-color: {{settings.nav_links_hover}};
                letter-spacing: 0.1rem;
                font-size: 14px;
                font-weight: 500;
                margin: 20px 0;
                text-transform: uppercase;
                width: 250px;
            }
        }
    }

    .terms_and_conditions {
        margin: 40px auto 30px;

        h4, h5 {
            color: $color--dark-green;
        }

        .paragraph {
            margin: 20px 0;

            p {
                margin-bottom: 5px;
            }

            .level-1, .level-2, .level-3 {
                font-weight: 500;
            }

            .level-1 {
                color: $color--dark-green;
            }

            .level-2 {
                color: $color--dark-gray;
            }

            .level-3 {
                color: $color--gray-2;
            }
        }
    }

    @include mq('phone') {
        form {
            .large_form {
                fieldset {
                    .kilo {
                        width: 100%;
                    }
                }
            }
        }
    }
}
