$color--yotpo-icon: #ab5232;
$color--yotpo-bold: #164732;
$color--yotpo-font1: #e3e3e3;

.yotpo-custom__wrapper {
    max-width: 990px;
    margin: auto auto 25px auto;

    .yotpo-custom__link {
        color: $color--yotpo-bold;
        cursor: pointer;
        font-family: "Gotham A","Gotham B",sans-serif;

        &:hover {
            opacity: .8;
        }
    }

    .yotpo-custom__header {
        h2 {
            text-align: center;
            margin: 30px 0;
            font-family: "Gotham A","Gotham B",sans-serif;
            color: $color--yotpo-bold;
            text-transform: uppercase;
            font-size: 1.875rem;
            font-weight: 800;
            letter-spacing: .25em;
        }

        .yotpo-custom__stars {
            text-align: center;
        }

        .yotpo-custom__reviews-count {
            text-align: center;

            .yotpo-custom__link {
                font-size: 16px;
                line-height: 39px;
            }
        }
    }

    .stars-outer {
        display: inline-block;
        position: relative;
        font-family: FontAwesome;
        font-size: 25px;
        letter-spacing: .9rem;

        &::before {
            content: "\f006 \f006 \f006 \f006 \f006";
            color: $color--yotpo-icon;
        }

        .stars-inner {
            position: absolute;
            top: 0;
            left: 0;
            white-space: nowrap;
            overflow: hidden;
            width: 0;

            &::before {
                content: "\f005 \f005 \f005 \f005 \f005";
                color: $color--yotpo-icon;
            }
        }
    }

    .attribution {
        font-size: 12px;
        color: #444;
        text-decoration: none;
        text-align: center;
        position: fixed;
        right: 10px;
        bottom: 10px;
        z-index: -1;

        &:hover {
            color: #1fa67a;
        }
    }

    .yotpo-custom__divider {
        border-bottom: 1px solid $color--yotpo-font1;
        display: flex;
        padding: 10px 2px;

        .yotpo-custom__btn--write-review {
            align-items: center;
            display: inline-flex;
            font-size: 16px;
            font-weight: 500;
            margin-left: auto;

            .fa {
                color: $color--yotpo-icon;
                font-size: 20px;
                font-weight: bold;
            }

            .text {
                margin-left: 10px;
            }
        }
    }
}
