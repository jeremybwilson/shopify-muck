@charset "UTF-8";

#shopify-section-newsletter {
  margin-bottom: 0 !important;
}

#newsletter-social {
  @include flexbox;
  @include flex-direction(column);

  @include mq('phone') {
    line-height: initial !important;  
  }
  @include mq('tablet-and-up') {
  	@include flex-direction(row);
  }
}


.newsletter-wrapper {
  background: $color--orange-1;
  text-transform: uppercase;
  text-align: center;
  padding: 44px 25px 43px;

  #share-info-line p {
    color: $color--white;
    text-transform: none;
    @include fontSize(12px);
    text-align:left;
  }
  #share-info-line p a {
      color: $color--white;
      font-weight: $font-weight--bold;
      text-decoration: underline;
  }
  @include mq('tablet-and-up') {
    width: 50%;
    padding: 69px 25px 73px;
  }
  .newsletter-inner {
    width: 100%;
    max-width: 325px;  
    margin: 0 auto;
    .input-checkbox{
      display:block;
      text-align:center;
    }
  }
  header {
    padding-top: 0;
    background: transparent;
  }
  h2 {
    margin-bottom: 10px;
    color: $color--white;
  	@include fontSize(16px);
    font-weight: $font-weight--bold;
  	letter-spacing: .15em;
  	text-transform: uppercase;

    @include mq('tablet-and-up') {
      margin-bottom: 12px;
      @include fontSize(22px);
      letter-spacing: .1em;
    }
  }
  .newsletter-subheading {
    margin-bottom: 15px;
    color: $color--white;
    @include fontSize(14px);
  	font-weight: $font-weight--book;
    letter-spacing: .05em;
    text-transform: none;

    @include mq('tablet-and-up') {
      margin-bottom: 17px;
      @include fontSize(16px);
    }
    p {
      color: inherit;
      margin-bottom: 0;
      font-size: inherit;
    }
  }
  form {
    .form-wrapper {
      @include flexbox;
      @include justify-content(space-between);
      position: relative;
      margin-bottom: 12px;
      background: $color--white; 
      border: solid 1px transparent;
      transition: border .3s ease;
    }
  }
  form.has-error .form-wrapper {
    border: solid 1px $color--error;
  }
  input[type="email"] {
    box-sizing: border-box;
    position: relative;
    z-index: 1;
    width: 100%;
    height: 47px;
    margin-bottom: 0;
    padding: 15px 68px 15px 20px;
    border: none;
    border-radius: none;
    color: $color--gray-2;
    @include fontSize(14px);
    letter-spacing: .025em;
    text-align: left;
    line-height: 14px;

    @include mq('tablet-and-up') {
      height: 46px;
      padding: 20px 68px 20px 20px;
      @include fontSize(16px);
      line-height: 16px;
    }

    &:focus {
      color: $color--dark-gray;
    }
  }
  form.has-error input[type="email"] {
    color: $color--error;
  }
  #button-footer-newsletter-submit {
    position: absolute;
    z-index: 2;
    @include flexbox;
    @include justify-content(center);
    @include align-items(center);
    top: 0;
    right: 0;
    width: 47px;
    height: 47px;
    cursor: pointer;

    @include mq('tablet-and-up') {
      width: 46px;
      height: 46px;
    }

    svg {
      width: 9px;
      height: 9px;

      @include mq('tablet-and-up') {
        width: 12px;
        height: 12px;
      }
    }

    &:hover {
      svg * {
        fill: $color--orange-2;
      }
    }
  }
  input[type="submit"] {
    display: none;
  }

  // response messages

  #newsletter-form--response {
    color: $color--white;

    #newsletter-error-response {
      @include h7;
    }  
    #newsletter-error-terms-response{
      p{
        color:#ffffff;
        font-weight: $font-weight--medium;
        margin-top:10px;
        letter-spacing: .025em;
        a{
          color:#ffffff;
          text-decoration: underline;
        }
      }
    }
    #newsletter-success-response {
      text-transform: none;

      p {
        color: inherit;
        @include fontSize(16px);
      }
    }
  }
}

// social

.social-wrapper {
  padding: 35px 50px 34px;
	background: $color--white;
  text-align: center;

  @include mq('tablet-and-up') {
    @include flexbox;
    @include flex-direction(row);
    @include align-items(center);
    @include justify-content(center);
    width: 50%;
  }

  .social-inner {
    @include flexbox;
    @include flex-direction(column);
    margin: 0 auto;

    @include mq('tablet-and-up') {
      @include flex-direction(row);
      @include align-items(center);
      @include justify-content(center);
    }
  }
  .section-title {
    margin-bottom: 0;
    color: $color--dark-green-1;
    @include fontSize(14px);
    letter-spacing: .2em;
    text-transform: uppercase;

    @include mq('tablet-and-up') {
      @include fontSize(16px);
      letter-spacing: .25em;
    }
  }	
  ul#social-icons {
    margin-top: 16px;
    text-align: center;

    @include mq('tablet-and-up') {
      display:inline-block;
      @include justify-content(center);
      @include align-items(center);
      margin-top: 0;
      margin-left: 24px;
    }
    li {
      display: inline-block;
      padding: 0 20px;
    }
    a {
      color: $color--dark-green-1;

      svg {
        width: 22px;
        height: 22px;

        @include mq('tablet-and-up') {
          width: 20px;
          height: 20px;
        }
      }

      &:hover {
        svg * {
          fill: $color--orange-1;
        }
      }
    }
  }
}
.mobile-disable{
  display: none;

  @include mq('tablet-and-up'){
    display: block;
  }
}
// custom checkbox code start
/* Customize the label (the container) */
.custom-checkbox {
  display: block;
  position: relative;
  padding-left: 25px;
  margin-bottom: 12px;
  cursor: pointer;
  font-size: 22px;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
/* Hide the browser's default checkbox */
.custom-checkbox input {
  position: absolute;
  opacity: 0;
  cursor: pointer;
  height: 0;
  width: 0;
}
/* Create a custom checkbox */
.checkmark {
  position: absolute;
  top: 0;
  left: 0;
  height: 15px;
  width: 15px;
  background-color: #eee;
}
/* When the checkbox is checked, add a blue background */
.custom-checkbox input:checked ~ .checkmark {
  background-color: #164632;
}
/* Create the checkmark/indicator (hidden when not checked) */
.checkmark:after {
  content: "";
  position: absolute;
  display: none;
}
/* Show the checkmark when checked */
.custom-checkbox input:checked ~ .checkmark:after {
  display: block;
}
/* Style the checkmark/indicator */
.custom-checkbox .checkmark:after {
  left: 5px;
  top: 1px;
  width: 5px;
  height: 10px;
  border: solid white;
  border-width: 0 2px 2px 0;
  -webkit-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  transform: rotate(45deg);
}