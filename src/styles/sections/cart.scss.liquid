
// CART DRAWER : Using the same drawer from the side instead of the template
// as its kind of already bad logic and the setup for ajax cart is much more robust
body.cart {
  overflow: hidden !important;

  #breadcrumb {
    display: none !important;
  }

  #CartDrawer {
    display: block !important;
    width: 100%;
    height: 100vh;
    max-width: 100%;
    left: 0;
    top: 0;
    padding-top: 110px;
    padding-bottom: 100px;
    @include bgGradient;

    @include mq( 'tablet-and-up' ) {
      padding-top: 220px;
    }
    

    // CLOSE BUTTON : hide button so it looks like the cart page
    .drawer__close.js-drawer-close {
      display: none;
    }

    // CART LINE ITEMS
    .ajaxcart__inner {

      // SINGLE LINE ITEM
      .ajaxcart__product {

        .ajaxcart__product-inner {
          width: 100%;
          padding: 0 0 15px;
          @include inline-flex;
          @include justify-content( space-around );
          @include align-items( center );

          .ajaxcart__product-img {
            width: 13%;
            float: none;
            @include inline-flex;
            @include justify-content( center );
          }

          .ajaxcart__product-details {
            @include inline-flex;
            @include justify-content( space-between );
            @include align-items( center );
            height: 100%;
            width: 100%;
            float: none;
            position: relative;

            .ajaxcart__name-wrap {
              flex-basis: 35%;
            }

            .ajaxcart__price-wrap {
              @include inline-flex;
              @include align-items( center );
              position: absolute;
              left: 43%;
              height: 100%;

              @include mq( 'tablet-and-up' ) {
                left: 53%;
              }
            }

            .qty-remove-wrap {
              flex-basis: 18%;

              input.ajaxcart__qty-num {
                @include mq( 'phone' ) {
                  border: none;
                }
              }

              .qty-remove-wrap-inner {
                @include flexbox;
                @include flex-direction( column );
                @include align-items( flex-end );

                .ajaxcart__qty {
                    @include inline-flex;
                    @include flex-direction( column-reverse ); //so plus is on top for mobile
                    right: 8px;
                    position: relative;

                    @include mq( 'tablet-and-up' ) {
                      right: 0;
                      @include flex-direction( row );
                    }
                }
              }
            }
            
          }
        }
      }
    }

    .ajaxcart__footer {
      width: 100%;
      border-bottom: none;

      .cart__checkout {
        display: block;
        max-width: 300px;
        margin: 0 auto;
      }
    }

  }
}






// OLD PAGE STYLES
body.cart {
  #content {
    max-width: 1200px;
    padding-top: 80px;
    padding-left: 15px;
    padding-right: 15px;

    @include mq('tablet-and-up') {
      padding-top: 100px;
    }
  }
  #breadcrumb {
    display: none;

    @include mq('tablet-and-up') {
      display: inherit;
    }
  }
}
#shopping-cart {
  h2 {
    @include h2;
    @include fontSize(20px);
    color: $color--dark-green;
    text-align: center;
    display: none;

    @include mq('tablet-and-up') {
      display: block;
      text-align: left;
      @include fontSize(24px);
    }
  }
}

#cartform {
  margin-top: 0;
  table {
    width: 100%;
    border-collapse: collapse;

    thead {

      @include mq('phone') {
        display: none;
      }
      th {
        padding: 0;
        @include mq('tablet-and-up') {
          padding: 10px;
          border-bottom: solid 1px $color--border-gray;
        }

        label {
          color: $color--dark-green;
          @include fontDim(14px,14px,.025em);
          font-weight: $font-weight--bold;
          text-transform: uppercase;

        }
      }
    }
    tbody {
      tr {
        @include mq('phone') {
          @include flexbox;
          @include flex-wrap(wrap);
          @include justify-content(flex-start); 
          padding-bottom: 20px;
          padding-top: 20px;
          border-bottom: solid 1px $color--border-gray;
        }
      }
      td {
        padding: 10px;
        @include mq('phone') {
          border-bottom: none;
          padding: 0;
        }
        @include mq('tablet-and-up') {
          border-bottom: solid 1px $color--border-gray;
        }
      }
    }
  }   
}
th.cart--remove {
  label {
    display: none;
  }
}

.cart-item {
  @include flexbox;
  @include align-items(center);

  @include mq('phone') {
    @include justify-content(space-between);
    width: 100%;
    border-bottom: none;    
  }
  @include mq('tablet-and-up') {
    @include justify-content(flex-start);
  }
}
.cart-image {
  margin-left: -15px;
  margin-right: 10px;

  @include mq('tablet-and-up') {
    margin-right: 20px;
  }
}
.cart-title {
  color: $color--dark-green;
  @include fontDim(14px,18px,.025em);
  font-weight: $font-weight--black;
  text-align: left;
  width: 90%;

  @include mq('tablet-and-up') {
    @include fontSize(16px);
    width: auto;
    text-align: center;
    
  }
}
.cart-remove {
  @include h7;
  color: $color--dark-green;
  text-transform: uppercase;

  @include mq('phone') {
    @include flexbox;
    @include justify-content(flex-start);
    @include order(5);
    width: 100%;

    .remove-text {
      @include fontSize( 14px );
      margin-top: 15px;
      display: block;
    }
  }

  a {
    @include mq('phone') {
      margin-left: auto;
      margin-right: auto;      
    }
  }

  &:hover {
    color: $color--orange-1;
  }

  i.fa {
    display: none;
  }
}
.cart-price,
.cart-quantity,
.cart--total-price {
  color: $color--dark-green;
  @include fontDim(14px,14px,.025em);

  @include mq('phone') {
    @include flexbox;
    @include align-items(center);    
  }

  @include mq('tablet-and-up') {
    @include fontSize(16px);
  }
}
.cart-price {
  @include mq('phone') {
    width: 40%;
    text-align: left;
  }
  @include mq('tablet-and-up') {
    text-align: center;
  }
}

.cart-quantity {
  @include mq('phone') {
    width: 20%;
  }
  margin-left: auto;

  input {
    margin-bottom: 0;
    text-indent: 0;
    text-align: center;
  }

  .qty-wrapper {
    @include inline-flex;
    @include justify-content( space-between );
    position: relative;
    left: 50%;
    transform: translateX( -50% );

    .quantity-selector {
      width: 30px;
      height: 20px;
      display: flex;
      border-radius: 3px;
      text-align: center;
      border: 1px solid #000;
      align-items: center;
      justify-content: center;
      margin: 0 10px;
      cursor: pointer;

      &.disabled { 
        pointer-events: none;
        opacity: 0.5;
      }
    }
  }

  
}

.cart--total-price {
  @include mq('phone') {
    width: 40%;
  }
  margin-left: auto;
  text-align: right;

  span {
    margin-left: auto;
  }

  label {
    text-align: right;
  }
}

.gift-item-cart-qty {
    width: 100%;
    text-align: center;
}

#basket-right {
  h4 {
    color: $color--dark-green;

    .subtotal-header {
      margin-right: 5em;
      font-weight: $font-weight--medium;
    }
    .money {
      @include fontSize(20px);

      @include mq('tablet-and-up') {
        @include fontSize(22px);
      }
    }
  }
}

.button#update-cart {
  background-color: $color--dark-green;

  &:hover {
    background-color: $color--dark-green;
  }
}
.button#checkout {
  background-color: $color--orange-1;

  &:hover {
    background-color: $color--dark-green;
  }
}