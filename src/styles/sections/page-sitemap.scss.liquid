ul.parent {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
}

ul.parent >li {
    min-width: 25%;
    margin-bottom:2%;
    list-style: none;
}

ul.parent >li ul.child ul.grandchild {
    padding-left: 25px;
    list-style: circle;
}

ul.parent a:hover {
    color: #ab5232;
}

@include mq('phone'){
    ul.parent {
      margin: 0px 20px;
    }
    ul.parent >li {
      margin-bottom:5%;
    }    
}