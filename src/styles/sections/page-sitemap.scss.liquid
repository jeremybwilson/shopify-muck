ul.parent {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
}

ul.parent >li {
    min-width: 25%;
    margin-bottom:2%;
    list-style: none;
}

ul.parent >li ul.child ul.grandchild {
    padding-left: 25px;    
    list-style: circle;
}

ul.parent a:hover {
    color: #ab5232;
}
ul.grandchild >li >a {
    color: #595959;
}
ul.parent>li >a {
    font-weight: 700;
    line-height: 1.5em;
    letter-spacing: .25em;
    font-size: 16px;
    font-size: 1rem;
    height: 100%;
    text-decoration: none;
    text-transform: uppercase;
    color: #164732;
}
ul.child {
    font-size: 14px;
    line-height: 1.7;
}
.child > li {
    color: #9b492b;
}
@include mq('phone'){
    ul.parent {
      margin: 0px 20px;
    }
    ul.parent >li {
      margin-bottom:5%;
    }    
}