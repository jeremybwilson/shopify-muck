    padding-top: 0;
    border-top: none;
    border-bottom: none;
  }
}

#product-right {
  margin-left: 0;
  margin-right: 0;

  @include mq('tablet-and-up') {
    max-width: 365px;
    margin-top: 35px;
  }
  @include mq('lap-and-up') {
    margin-top: 70px;
  }
