/* Free Shipping
 * ---------------------------------------------- */

#free-shipping--accordion {
  @include flexbox;
  @include flex-direction(column);
  width: 100%;
  margin-bottom: 40px;

  // header & accordion trigger

  dt {
    @include flexbox;
    @include justify-content(space-between);
    @include align-items(center);
    cursor: pointer;

    & > svg {
      width: 21px;
      height: 21px;
      margin-right: 5px;

      @include mq('tablet-and-up') {
        width: 36px;
        height: 36px;
        margin-right: 12px;
      }
    }
    h3 {
      margin-top: 3px;
      color: $color--dark-green;
      @include fontDim(14px,14px,.05em);
      font-weight: $font-weight--bold;
      text-transform: uppercase;

      @include mq('tablet-and-up') {
        margin-top: 5px;
        @include fontDim(16px,16px,.15em);
      }
    }
    .opener {
      margin-left: auto;

      svg {
        width: 10px;
        height: 10px;
        transition: transform .25s ease;
        transform-origin: center;
      }
    }
  }
  dt.open {
    .opener svg {
      transform: rotate(180deg);
    }
  }

  // content

  dd {
    display: none;
    margin-top: 16px;
    padding-right: 10px;

    @include mq('tablet-and-up') {
      padding-right: 24px;
    }
    p {
      @include fontDim(14px,24px,.025em);

      @include mq('tablet-and-up') {
        @include fontDim(16px,26px,.025em);
      }
    }
  }
}

/* Big Green Product Description Area
 * ---------------------------------------------- */

.product-description--area {
  padding-top: 50px;
  padding-bottom: 40px;
  background-color: $color--dark-green;

  @include mq('tablet-and-up') {
    padding-top: 100px;
    padding-bottom: 90px;
  }

  .row {
    @include flexbox;
    @include flex-direction(column);
    max-width: 1200px;

    @include mq('tablet-and-up') {
      @include flex-direction(row);
      @include flex-wrap(wrap);
      @include justify-content(space-between);
    }
  }

  h3 { // Description header

    width: 100%;
    margin-bottom: 15px;
    color: $color--white;
    @include fontSize(18px);
    font-weight: $font-weight--black;
    letter-spacing: .25em;
    text-align: center;
    text-transform: uppercase;

    @include mq('tablet-and-up') {
      padding-left: 120 / 1200 * 100%; // line up with p below
      @include fontSize(22px);
      text-align: left;
    }
  }

  // Paragraph

  .rte, .rte p {
    color: $color--white;
    @include fontDim(14px,24px,.025em);
    text-align: center;

    @include mq('tablet-and-up') {
      @include fontSize(16px);
      line-height: 30px / 16px * 1em;
      text-align: left;
    }
  } 

  li {
    position: relative;
    padding-left: 20px;
    text-align: left;
    list-style: none;

    &:before {
      content: '';
      position: absolute;
      top: 10px;
      left: 0;
      width: 5px;
      height: 5px;
      border-radius: 50%;
      background-color: $color--orange-1;
    }
  }
}
.product-description--left {
  @include mq('tablet-and-up') {
    width: 720 / 1200 * 100%;
    padding-left: 120 / 1200 * 100%;
    padding-right: 120 / 1200 * 100%;
  }

  .rte > ul {
    display: none;
  }
  .product-description--icons {
    @include mq('phone') {
      display: none;
    }
  }
}
.product-description--icons {
  @include flexbox;
  @include flex-wrap(wrap);
  @include justify-content(center);
  @include align-items(flex-start);
  margin: 15px -10px; // neg margins to accommodate item padding

  @include mq('tablet-and-up') {
    @include justify-content(flex-start);
    margin-top: 30px;
  }

  li {
    @include flexbox;
    @include flex-direction(column);
    @include justify-content(center);
    margin: 0 10px 20px;
    max-width: 80px;
    padding-left: 0;
    list-style: none;
    text-align: center;

    &:before {
      display: none;
    }
  }

  img {
    max-width: 54px;
    margin: 0 auto 12px;
  }
  span {
    color: $color--light-gray;
    @include fontDim(13px,18px,.025em);
  }
}

#product-description--mobile-dropdown {  
  @include mq('phone') {
    display: none;
  }
  @include mq('tablet-and-up') {
    width: 480 / 1200 * 100%;
  }
  .product-description--icons {
    @include mq('tablet-and-up') {
      display: none;
    }
  }
  .rte > p {
    display: none;
  }  
}
#product-description--mobile-dropdown-trigger {
  width: 100%;
  padding: 20px;
  margin-top: 20px;
  margin-bottom: -20px;
  color: $color--white;
  font-weight: $font-weight--bold;
  @include fontDim(14px,14px,.125em);
  text-align: center;
  text-transform: uppercase;
  cursor: pointer;

  @include mq('tablet-and-up') {
    display: none;
  }

  svg {
    width: 10px;
    height: 10px;
    margin-left: 10px;
    transition: transform .25s ease;
    transform-origin: center;
  }

  .open-text {
    display: none;
  }
  &.open {
    .closed-text {
      display: none;
    }
    .open-text {
      display: inline;
    }
    svg {
      transform: rotate(180deg);    
    }
  } 
}

