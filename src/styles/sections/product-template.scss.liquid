/* Free Shipping
 * ---------------------------------------------- */

#free-shipping--accordion {
  @include flexbox;
  @include flex-direction(column);
  width: 100%;
  margin-bottom: 40px;

  // header & accordion trigger

  dt {
    @include flexbox;
    @include justify-content(space-between);
    @include align-items(center);
    cursor: pointer;

    & > svg {
      width: 21px;
      height: 21px;
      margin-right: 5px;

      @include mq('tablet-and-up') {
        width: 36px;
        height: 36px;
        margin-right: 12px;
      }
    }
    h3 {
      margin-top: 3px;
      color: $color--dark-green;
      @include fontDim(14px,14px,.05em);
      font-weight: $font-weight--bold;
      text-transform: uppercase;

      @include mq('tablet-and-up') {
        margin-top: 5px;
        @include fontDim(16px,16px,.15em);
      }
    }
    .opener {
      margin-left: auto;

      svg {
        width: 10px;
        height: 10px;
        transition: transform .25s ease;
        transform-origin: center;
      }
    }
  }
  dt.open {
    .opener svg {
      transform: rotate(180deg);
    }
  }

  // content

  dd {
    display: none;
    margin-top: 16px;
    padding-right: 10px;

    @include mq('tablet-and-up') {
      padding-right: 24px;
    }
    p {
      @include fontDim(14px,24px,.025em);

      @include mq('tablet-and-up') {
        @include fontDim(16px,26px,.025em);
      }
    }
  }
}

