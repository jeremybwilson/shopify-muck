@charset "UTF-8";

/*==================
  PDP
 ==================*/

.product {
  #breadcrumb {
    @include fontSize(14px);

    @include mq('tablet-and-up') {
      @include fontSize(16px);
    }
    & > *:nth-last-child(-n+3) {
      // hides and shows the page-title, the separator before it, and the #results-count div
      display: none;

      @include mq('tablet-and-up') {
        display: inline;
      }
    }
  }
}

#shopify-section-product-template {
  margin-top: 60px;

  @include mq('tablet-and-up') {
    margin-top: 55px;
  }
}

.row.product-details--top {
  @include flexbox;
  @include flex-direction(row);
  @include align-items(flex-start);
  @include justify-content(space-between);

  @include mq('tablet-and-up') {
    width: 1350 / 1440 * 100%;
    max-width: 1350px;
    margin: 0 auto 72px;
  }
}

.product {
  #content {
    h1 {
      color: $color--dark-green-1;
      @include fontSize(16px);
      font-weight: $font-weight--black;
      letter-spacing: .125em;
      line-height: 25px / 16px * 1em;
      text-align: center;
      text-transform: uppercase;

      @include mq('tablet-and-up') {
        max-width: 400px;
        @include fontSize(25px);
        letter-spacing: .25em;
        line-height: 34px / 25px * 1em;
        text-align: left;
      }
    }
  }
}

/* Product Images Snippet
 * ---------------------------------------------- */

@import url('../snippets/product-images.scss.liquid');

#product-price {
  border-bottom: none;
  color: $color--dark-gray;
  @include fontSize(16px);
  font-weight: $font-weight--book;
  letter-spacing: .125em;
  text-align: center;

  @include mq('tablet-and-up') {
