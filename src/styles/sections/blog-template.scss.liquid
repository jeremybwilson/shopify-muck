.blog-template {
  .collection-banner {
    .blog-hero-img {
      height: 420px;
      position: relative;

      img {
        position: absolute;
        top: 50%;
        -webkit-transform: translateY(-38%);
        -moz-transform: translateY(-38%);
        -ms-transform: translateY(-38%);
        -o-transform: translateY(-38%);
        transform: translateY(-38%);
      }

      .blog-hero-heading {
        position: absolute;
        display: flex;
        align-items: center;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        text-align: center;
        color: white;
        font-family: $font-stack--heading;
        font-size: 53px;
        text-transform: uppercase;
        letter-spacing: 10px;
        font-weight: 800;
        max-width: 600px;
      }

      @include mq('phone') {
        height: auto;

        img {
          position: relative;
          top: 0;
          -webkit-transform: none;
          -moz-transform: none;
          -ms-transform: none;
          -o-transform: none;
          transform: none;
        }

        .blog-hero-heading {
          font-size: 24px;
          letter-spacing: 6px;
          font-weight: 500;
          min-width: 300px;
        }
      }
    }
  }
}