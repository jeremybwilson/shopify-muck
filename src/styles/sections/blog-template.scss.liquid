.blog-template {
  .blog-banner {
    .blog-hero-img {
      height: 390px;
      position: relative;

      img {
        position: absolute;
        top: 50%;
        -webkit-transform: translateY(-38%);
        -moz-transform: translateY(-38%);
        -ms-transform: translateY(-38%);
        -o-transform: translateY(-38%);
        transform: translateY(-38%);
      }

      .blog-hero-heading {
        position: absolute;
        display: flex;
        align-items: center;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        text-align: center;
        color: white;
        font-family: $font-stack--heading;
        font-size: 53px;
        text-transform: uppercase;
        letter-spacing: 0.84rem;
        font-weight: 800;
        max-width: 600px;
      }

      @include mq('phone') {
        height: auto;

        img {
          position: relative;
          top: 0;
          -webkit-transform: none;
          -moz-transform: none;
          -ms-transform: none;
          -o-transform: none;
          transform: none;
        }

        .blog-hero-heading {
          font-size: 24px;
          letter-spacing: 6px;
          font-weight: 500;
          min-width: 300px;
        }
      }
    }
  }

  .blog-nav-container {
    position: relative;
    width: 100%;
    height: 100%;
    margin-left: auto;
    margin-right: auto;
    padding: 0;
  }
  nav.blog-nav {
    color: $color--dark-green-2;
    display: block;
    height: 60px;

    @include mq('phone') {
      height: 60px;
    }

    // Nav-Category-Header
    .nav-category-header {
      @include h5;
      height: 100%;
      text-decoration: none;
      text-transform: uppercase;
      color: $color--dark-green-2;
    }
  }
  .blog-nav-menu {
    position: relative;
    height: 100%;

    .blog-nav-menu-desktop-list {
      display: inline-block;
      list-style: none;
      text-align: center;
      height: 100%;
      width: 100%;
      z-index: $zIndexButtons;

      @include mq('phone') {
        display: none;
      }

      .blog-nav-primary-link {
        display: inline;
        height: 100%;
        width: 100%;
        padding: 5px 20px;
        margin: 0 9px;

        .nav-category-header { //Center the nav link item vertically 
          @include inline-flex;
          @include align-items( center );
          @include fontSize( 14px );
          text-align:center;
          letter-spacing: 0.08rem;
          padding-top: 3px; // make up size for 3px bottom border on links
          border-bottom: 3px solid transparent;
          font-family: $font-stack--heading;
          font-weight: 500;
        }

        &:hover > a {
          border-bottom: 3px solid {{ settings.nav_links_hover }};
        }

        &.active > a {
          color: {{ settings.nav_links_hover }};
          border-bottom: none;
        }
        // SALE : Sale gets unique color var from settings
      {% if settings.enable_nav_name_styling %}
        &.sale a {
          color: {{ settings.nav_links_sale }};
        }
      {% endif %}
      }
    }

    .blog-nav-menu-mobile {
      display: none;
      height: 100%;
      text-transform: uppercase;
      letter-spacing: 0.08rem;
      font-family: $font-stack--heading;
      font-weight: 500;
      width: 100%;

      @include mq('phone') {
        display: inline-flex;
        align-items: center;
      }

      .prefix {
        height: 100%;
        line-height: 61px;
        width: 100px;
        margin-left: 30px;
        text-align: right;
      }

      .blog-nav-menu-mobile-list-wrapper {
        border: none;
        height: 100%;
        position: relative;
        width: 100%;
        overflow: hidden;
        margin-right: 25px;

        &:after {
          width: 0;
          height: 0;
          border-left: 6px solid transparent;
          border-right: 6px solid transparent;
          border-top: 7px solid {{ settings.nav_links_hover }};
          position: absolute;
          top: 45%;
          right: 4px;
          content: "";
          z-index: 99;
        }

        .blog-nav-menu-mobile-list {
          background: none;
          border: none;
          color: $color--dark-green-2;
          height: 100%;
          margin: 0;
          position: relative;
          text-transform: uppercase;
          letter-spacing: 0.08rem;
          line-height: 60px;
          font-family: $font-stack--heading;
          font-weight: 500;
          width: 100%;
          z-index: 98;
        }
      }
    }
  }

  #content {
    padding: 70px 0;

    @include mq('phone') {
      margin-bottom: 30px;
      padding: 20px 0;
    }
  }

  .load_more {
    text-align: center;
    width: 100%;

    .btn-load-more {
      background-color: {{settings.nav_links_hover}};
      font-weight: 500;
      margin: 10px auto 50px;
      padding: 0 40px;
    }
  }

  .loading-blog {
    display: none;
    text-align: center;
    margin: 20px auto;
    width: 100%;
  }
}

.article-loop-container {
  width: 100%;

  .related-articles-title {
    color: $color--dark-green-2;
    font-family: $font-stack--heading;
    font-size: 26px;
    font-weight: 800;
    letter-spacing: 0.4rem;
    margin-bottom: 20px;
    text-align: center;
    text-transform: uppercase;
  }

  .article-index {
    clear: both;
    display: inline-block;
    float: none !important;
    margin-left: 1.08%;
    margin-right: 1.08%;
    vertical-align: top;
    width: 47.6%;

    &:nth-child(odd) {
      .article-info {
        .article-info-inner {
          margin-left: 0;
          margin-right: auto;
        }
      }
    }

    &:nth-child(even) {
      .article-info {
        .article-info-inner {
          margin-left: auto;
          margin-right: 0;
        }
      }
    }

    .article-info {
      .article-info-inner {
        max-width: 533px;

        .box-ratio {
          height: auto;
          max-height: 356px;
          padding: 0 !important;
        }

        .blog-title {
          margin: 40px auto 10px;
          text-align: center;

          a {
            color: {{settings.nav_links_hover}};
            font-family: $font-stack--heading;
            font-size: 17px;
            font-weight: 500;
            letter-spacing: 0.22rem;
          }
        }

        .article-title {
          a {
            color: $color--dark-green-2;
            font-family: $font-stack--heading;
            font-size: 30px;
            font-weight: 800;
            letter-spacing: 0.47rem;
          }
        }

        .posted {
          color: $color--dark-green-2;
          font-size: 14px;
          font-weight: 500;
          text-align: center;
          text-transform: uppercase;
        }

        .comments {
          margin: 10px auto;
          text-align: center;
          a {
            .comments-icon {
              color: {{settings.nav_links_hover}};
              font-size: 14px;
              margin-right: 5px;
            }
            .comments-count {
              font-size: 14px;
              font-weight: 400;
              text-transform: capitalize;
            }
          }
        }

        .article-content {
          font-size: 14px;
          letter-spacing: 0.1rem;
          margin-top: 10px;
          margin-bottom: 10px;
          padding: 10px 50px;
          text-align: center;
        }

        .readmore {
          text-align: center;

          a {
            background: none;
            color: $color--dark-green-2;
            font-size: 16px;
            font-weight: 500;
            letter-spacing: 0.2rem;
            line-height: 18px;

            .caret-icon {
              color: {{settings.nav_links_hover}};
              font-size: 18px;
              line-height: 18px;
              margin-left: 5px;
              vertical-align: text-top;
            }
          }
        }

      }
    }
  }

  @include mq('phone') {
    .related-articles-title {
      font-size: 22px;
      letter-spacing: 0.3rem;
    }

    .article-index {
      margin-left: 2.16%;
      margin-right: 2.16%;
      width: 95.2%;

      .article-info {
        margin-bottom: 10px;
        padding: 0 18px;

        .article-info-inner {
          .blog-title {
            margin: 30px auto 10px;

            a {
              font-size: 14px;
              font-weight: 500;
            }
          }

          .article-title {
            a {
              font-size: 22px;
              letter-spacing: 0.3rem;
            }
          }

          .article-content {
            padding: 0;
          }

          .readmore {
            margin: 20px auto 0;
          }
        }
      }
    }
  }
}

