@charset "UTF-8";

#contact-muck {
  h3 {
    @include h3;
    font-size: 22px;
    color: #fff;
    letter-spacing: 0;
    text-transform: capitalize;
    margin: 25px 0;
  }
  h4 {
      margin-bottom: 15px;
  }
  h5 {
    text-transform: capitalize;
    margin: 10px 0;
  }
  p {
    margin-bottom: 0;
  }
  hr {
    margin: 25px 0;
    @include mq( 'phone' ) {
      display: none;
    }
  }
  br {
    @include mq( 'phone' ) {
      display: none;
    }
  }
  table {
    @include mq( 'phone' ) {
      tr:first-child td:first-child {
        border-top: 1px solid #e5e5e5;
        border-bottom: 1px solid #e5e5e5;
        padding: 20px 0;
        margin: 20px 0;
      }
    }
    td {
      border: none;
      vertical-align: top;
      padding: 0;

      @include mq( 'phone' ) {
        float: left;
        width: 100% !important;
      }
    }
  }

  .page-content-field {
    a {
      font-weight: 700;
    }
  }

}


#muck-form {
    float: right;
    width: 100%;
    margin-top: 50px;
    background-color: #164732;
  
  form {
    width: 80%;
    margin: 0 auto;
    padding: 15px 0;
      
    @include mq('tablet-and-up') {
      width: 60%;
      padding: 50px 0;
    }
    label {
      color: #fff;
      font-size: 16px;
      font-weight: 300;
      margin-bottom: 10px;

      .req {
        color: $color--orange-1;
        font-size: 19px;
      }
    }
    input {
      background: #fff;
      border-radius: 0;
    }
    input::placeholder { 
      color: transparent;
      opacity: 0;
    }
    textarea {
      background-color: #fff;
      border-radius: 0;
    }
    textarea::-webkit-input-placeholder { 
      color: transparent;
    }
    p.form-phone {
      display: none;
    }
    p.form-name,
    p.form-email {
      display: inline-block;
      width: 100%;

      @include mq('tablet-and-up') {
        width: 49%;
      }
    }
    p.form-email {
      margin-left: 1%;
    }
    p.form-submit {
      text-align: center;
    }
    input[type="submit"] {
      width: 200px;
      background-color: #ab5232;
    }
    .successForm p {
      color: #fff;
      border: 1px solid#fff;
      padding: 5px 20px;
    }
  }
}
