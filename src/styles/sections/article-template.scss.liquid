.article-template {
  .article-featured-img {
    .box-ratio {
      height: 420px;
      position: relative;

      img {
        position: absolute;
        top: 50%;
        -webkit-transform: translateY(-51%);
        -moz-transform: translateY(-51%);
        -ms-transform: translateY(-51%);
        -o-transform: translateY(-51%);
        transform: translateY(-51%);
      }

      @include mq('phone') {
        height: auto;

        img {
          position: relative;
          top: 0;
          -webkit-transform: none;
          -moz-transform: none;
          -ms-transform: none;
          -o-transform: none;
          transform: none;
        }
      }
    }
  }

  #content {
    padding: 0 10px 50px;
  }

  #blog-article {
    .blog-title {
      margin: 40px auto 10px;
      text-align: center;

      a {
        color: {{settings.nav_links_hover}};
        font-family: $font-stack--heading;
        font-size: 16px;
        font-weight: 500;
        letter-spacing: 0.2rem;
        text-transform: uppercase;
      }
    }

    .article-title {
      border: none !important;
      color: $color--dark-green-2;
      font-family: $font-stack--heading;
      font-size: 45px;
      font-weight: 800;
      letter-spacing: 0.6rem;
      margin-bottom: 10px !important;
      text-align: center;
      text-transform: uppercase;
    }

    .posted {
      color: $color--dark-green-2;
      font-size: 14px;
      font-weight: 400;
      text-align: center;
      text-transform: uppercase;
    }

    .comments {
      margin: 10px auto;
      text-align: center;
      a {
        .comments-icon {
          color: {{settings.nav_links_hover}};
          font-size: 14px;
          margin-right: 5px;
        }
        .comments-count {
          font-size: 14px;
          font-weight: 400;
          text-transform: capitalize;
        }
      }
    }

    .share-icons {
      border: none;
      margin: 15px auto;
      padding: 0;
      text-align: center;

      a {
        color: $color--dark-green-2 !important;
        font-size: 12px;
      }
    }

    #article-body {
      border-top: 1px solid #eee;
      margin-top: 40px;

      .rte {
        margin: 40px auto 0;
      }

      #comments {
        .comments-container {
          margin-top: 40px;

          .section-title {
            color: $color--dark-green-2;
            font-size: 28px;
            font-weight: 800;
            letter-spacing: 0.3rem;
            text-align: left;
            text-transform: uppercase;
          }

          .info-block {
            border-bottom: 1px solid #eee;
            color: $color--dark-green-2;
            display: flex;
            font-size: 14px;
            font-weight: 400;
            justify-content: space-between;
            margin-bottom: 20px;
            padding-bottom: 20px;

            .customer-login {
              font-size: inherit;

              .comments-icon {
                color: {{settings.nav_links_hover}};
                font-size: inherit;
                margin-right: 5px;
              }

              .login-text {
                color: $color--dark-green-2;
                font-size: inherit;
              }
            }
          }

          .social-block {
            color: $color--dark-green-2;
            display: flex;
            font-size: 13px;
            font-weight: 400;
            justify-content: space-between;
            margin-bottom: 20px;

            .recommend {
              margin-right: 5px;

              .comments-icon {
                color: {{settings.nav_links_hover}};
                font-size: inherit;
                margin-right: 3px;
              }
            }
            .social-twitter,
            .social-facebook {
              border-radius: 3px;
              color: white;
              margin-right: 5px;
              padding: 2px 0 2px 5px;
              font-size: 14px;
              text-transform: uppercase;

              .sub-text {
                font-size: 8px;
                vertical-align: middle;
              }
            }

            .social-twitter {
              background-color: #33aae0;
            }

            .social-facebook {
              background-color: #3b5d98;

              .sub-text {
                margin-right: 5px;
              }
            }
            .sort-widget {
            }
          }

          .comment-submit-block {
            border-bottom: 1px solid #eee;
            display: flex;
            margin-bottom: 10px;
            padding: 20px 0 5px;

            .user-info-part {
              color: $color--dark-green-2;
              font-size: 38px;
              padding: 0 5px;
              width: 60px;
            }
            #comment-form {
              margin-right: auto;
              max-width: 450px;
              width: 100%;

              .form-widget {
                input {
                  max-width: 450px;
                }

                .hide-part {
                  display: none;
                }
              }

              .comment-submit {
                background-color: {{settings.nav_links_hover}};
                display: none;
                letter-spacing: 0.1rem;
                float: right;
                font-size: 14px;
                font-weight: 500;
              }
            }
          }

          .comments-list-block {
            width: 100%;

            #commentlist {
              .comment-single-part {
                display: flex;
                padding: 0 5px;

                .user-info-part {
                  align-items: center;
                  background-color: #164732;
                  border-radius: 20px;
                  color: white;
                  display: flex;
                  font-size: 14px;
                  font-weight: 500;
                  height: 38px;
                  justify-content: center;
                  margin-right: 20px;
                  width: 40px;
                }

                .comment-details-part {
                  font-size: 12px;
                  padding-top: 10px;
                  width: 100%;

                  .comment-details {
                    .author {
                      color: $color--dark-green-2;
                      font-size: 14px;
                      font-weight: 500;
                      margin-right: 5px;
                    }
                  }

                  .comment {
                    float: none;
                  }

                  .controls {
                    .reply-control {
                      margin-right: 10px;
                    }
                    .share-control {
                      .fa-share-square-o {
                        color: {{settings.nav_links_hover}};
                        margin-right: 5px;
                      }
                    }
                  }
                }
              }
            }
          }

        }
      }
    }
  }

  .related-articles {
    background-color: #f5f1ed;
    margin-top: 20px;
    padding: 80px 0 40px;
  }

  @include mq('phone') {
    #blog-article {
      .blog-title {
        a {
          font-size: 14px;
        }
      }

      .article-title {
        font-size: 22px;
        letter-spacing: 0.3rem;
        margin-bottom: 0 !important;
      }

      .posted {
        font-size: 12px;
      }

      .comments {
        a {
          .comments-count {
            font-size: 13px;
          }
        }
      }

      #article-body {
        margin-top: 20px;

        .rte {
          margin: 20px auto 0;
          padding: 0 20px;
        }
      }
    }
  }
}
