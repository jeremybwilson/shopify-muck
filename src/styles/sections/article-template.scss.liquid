.article-template {
  .article-featured-img {
    .box-ratio {
      height: 420px;
      position: relative;

      img {
        position: absolute;
        top: 50%;
        -webkit-transform: translateY(-51%);
        -moz-transform: translateY(-51%);
        -ms-transform: translateY(-51%);
        -o-transform: translateY(-51%);
        transform: translateY(-51%);
      }

      @include mq('phone') {
        height: auto;

        img {
          position: relative;
          top: 0;
          -webkit-transform: none;
          -moz-transform: none;
          -ms-transform: none;
          -o-transform: none;
          transform: none;
        }
      }
    }
  }

  #content {
    padding: 0 10px 50px;
  }

  #blog-article {
    .blog-title {
      margin: 40px auto 10px;
      text-align: center;

      a {
        color: {{settings.nav_links_hover}};
        font-family: $font-stack--heading;
        font-size: 16px;
        font-weight: 500;
        letter-spacing: 0.2rem;
        text-transform: uppercase;
      }
    }

    .article-title {
      border: none !important;
      color: $color--dark-green-2;
      font-family: $font-stack--heading;
      font-size: 45px;
      font-weight: 800;
      letter-spacing: 0.6rem;
      margin-bottom: 10px !important;
      text-align: center;
      text-transform: uppercase;
    }

    .posted {
      color: $color--dark-green-2;
      font-size: 14px;
      font-weight: 400;
      text-align: center;
      text-transform: uppercase;
    }

    .comments {
      margin: 10px auto;
      text-align: center;
      a {
        .comments-icon {
          color: {{settings.nav_links_hover}};
          font-size: 14px;
          margin-right: 5px;
        }
        .comments-count {
          font-size: 14px;
          font-weight: 400;
          text-transform: capitalize;
        }
      }
    }

    .share-icons {
      border: none;
      margin: 15px auto;
      padding: 0;
      text-align: center;

      a {
        color: $color--dark-green-2 !important;
        font-size: 12px;
      }
    }

    #article-body {
      border-top: 1px solid #eee;
      margin-top: 40px;

      .rte {
        margin: 40px auto 0;
      }
    }
  }

  .related-articles {
    background-color: #f5f1ed;
    margin-top: 20px;
    padding: 80px 0 40px;
  }

  @include mq('phone') {
    #blog-article {
      .blog-title {
        a {
          font-size: 14px;
        }
      }

      .article-title {
        font-size: 22px;
        letter-spacing: 0.3rem;
        margin-bottom: 0 !important;
      }

      .posted {
        font-size: 12px;
      }

      .comments {
        a {
          .comments-count {
            font-size: 13px;
          }
        }
      }

      #article-body {
        margin-top: 20px;

        .rte {
          margin: 20px auto 0;
          padding: 0 20px;
        }
      }
    }
  }
}
