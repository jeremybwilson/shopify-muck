@charset "UTF-8";

#subpage {
	margin-right: 27px;
	margin-left: 27px;

	@include p;
  	font-size: 14px;
  	line-height: 2;

	@include mq('tablet-and-up') {
		margin: 0;
  	}

  p {
  	@include p;
  	font-size: 14px;
  	line-height: 2;
  }
  h1 {
  	@include h1;
  	color: $color--dark-green;
  	font-size: 24px;
  	padding-bottom: 20px;
  	border-bottom: none;
  }
  h4 {
  	color: $color--dark-green;
  	text-transform: capitalize;
  }
  h5 {
  	@include h5;
  	color: $color--dark-green;
  	text-transform: uppercase;
  	letter-spacing: 0 !important;
  	margin: 15px 0;
  }
  ul > li {
  		list-style: none;
	  	font-size: 14px;
	  	color: $color--gray-1;
	  	padding-bottom: 10px;
	  	line-height: 2;

	  	&:before {
	  		content: "â€¢";
	  		color: $color--orange-2;
	  		margin-right: 10px;
	  	}

	  	&:last-child {
	  		padding-bottom: 0;
	  	}
	}
	ol > li {
		list-style-type: decimal;
		content: " ";
		padding-bottom: 10px;
		padding-left: 40px;

		&:last-child {
			padding-bottom: 0;
		}
	}

	div.left-nav {

		margin-bottom: 50px;

		@include mq('tablet-and-up') {
			float: left;
			width: 35%;
			padding-left: 200px;
		}

		nav > ul > li {
			&:before {
				content: " ";
				margin-right: 0;
			}
		}
	}

	div.page-content-field {

		@include mq('tablet-and-up') {
			float: right;
			width: 65%;
		}

		a {
    		color: $color--orange-1;
  		}
	}


	div.col {
		width: 100%;
		float: left;
	    background: linear-gradient(to top, rgb(38, 92, 77) 0%, rgb(52, 127, 105) 100%);
	    color: rgb(255, 255, 255);
	    border: 1px dotted rgb(255, 255, 255);
	    margin: 10px 0 20px 0;
	    text-align: center;
	    height: 270px;
	    padding: 2%;

		@include mq('tablet-and-up') {
			width: 33%;
		}

		img {
			padding-top: 7%;

			@include mq('tablet-and-up') {
				padding-top: 0;
			}
		}
	}

	table {
		tr:first-child {

		}
		td {
			border: 1px solid #ccc;
			padding: 5px 10px;
		}
	}
}


