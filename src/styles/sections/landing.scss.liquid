@charset "UTF-8";

#subpage {
	margin-right: 27px;
	margin-left: 27px;

	@include p;
  	font-size: 14px;
  	line-height: 2;

	@include mq('tablet-and-up') {
		margin: 0;
  	}

  p {
  	@include p;
  	font-size: 14px;
  	line-height: 2;
  }
  h1 {
  	@include h1;
  	color: $color--dark-green;
  	font-size: 24px;
  	padding-bottom: 20px;
  	border-bottom: none;
  }
  h4 {
  	color: $color--dark-green;
  	text-transform: capitalize;
  }
  h5 {
  	@include h5;
  	color: $color--dark-green;
  	text-transform: uppercase;
  	letter-spacing: 0 !important;
  	margin: 15px 0;
  }
  ul > li {
  		list-style: none;
	  	font-size: 14px;
	  	color: $color--gray-1;
	  	padding-bottom: 10px;
	  	line-height: 2;

	  	&:before {
	  		content: "â€¢";
	  		color: $color--orange-2;
	  		margin-right: 10px;
	  	}

	  	&:last-child {
	  		padding-bottom: 0;
	  	}
	}
	ol > li {
		list-style-type: decimal;
		content: " ";
		padding-bottom: 10px;
		padding-left: 40px;

		&:last-child {
			padding-bottom: 0;
		}
	}

	div.left-nav {

	    float: left;
	    width: 100%;
	    margin: 0 0 25px 0;

	    @include mq('tablet-and-up') {
	    	width: auto !important;	
	    }

		div.desktop-left-nav {
			display: none;

			@include mq('tablet-and-up') {
				display: block;
				float: left;
				width: 100%;
				padding-left: 200px;
			}

			@include mq('tablet') {
				padding-left: 0;
			}

			ul > li {

				&:before {
					content: " ";
					margin-right: 0;
				}

				a {
					font-size: 16px;
					color: $color--dark-green-1;
					line-height: 1.6875em;
	    			letter-spacing: .025em;
	    			font-weight: 700;
				}
			}
		}
	}

	div.categories {
		float: left;
		width: 100%;
    	font-size: 16px;
    	font-weight: 700;
    	text-transform: capitalize;

    	span {
    		float: left;
    		width: 100%;
    		color: #fff;
			background: $color--orange-1;
			padding: 15px;
    	}

		div.category {
			display: none;
			float: left;
			width: 100%;
			background: #f9f7f4;
			padding: 25px;

			a {
				float: left;
				width: 100%;
				color: $color--dark-green-1;
				margin-bottom: 15px;
			}
		}

		@include mq('tablet-and-up') {
			display: none;
		}
	}

	div.page-content-field {

		float: left;

		@include mq('tablet-and-up') {
			float: right;
			width: 65%;
		}

		a {
    		color: $color--orange-1;
  		}
	}


	div.col {
		width: 100%;
		float: left;
	    background: linear-gradient(to top, rgb(38, 92, 77) 0%, rgb(52, 127, 105) 100%);
	    color: rgb(255, 255, 255);
	    border: 1px dotted rgb(255, 255, 255);
	    margin: 10px 0 20px 0;
	    text-align: center;
	    height: 270px;
	    padding: 2%;

		@include mq('tablet-and-up') {
			width: 33%;
		}

		img {
			padding-top: 7%;

			@include mq('tablet-and-up') {
				padding-top: 0;
			}
		}
	}

	table {
		tr:first-child {

		}
		td {
			border: 1px solid #ccc;
			padding: 5px 10px;
		}
	}
}


#content .nested-list {
    ol {
        counter-reset: li;

        & > li {
            content: none;
            padding-left: 25px;
            list-style-type: none;
            text-indent: -12px;

            &:before {
                counter-increment: li;
                content: counters(li,".") ". ";
                display: inline-block;
            }

            h2 {
                display: inline;
                @include h6;
                text-transform: uppercase;
            }
            p {
                display: inline;
            }

        }
        h3 {
            @include h6;
            color: $color--dark-green;
            margin-top: 20px;
            padding-left: 25px;
        }
    }
}

// page.returns-gate.liquid

#form--gate--submit-return {
	padding: 0;

	#checkbox--submit-return {
		display: inline;
		margin-right: 12px;
	}
	label {
		display: inline;
	}
	#button--submit-return {
		display: inline-block;
		margin-top: .5em;
		background-color: $color--orange-1;

		&:disabled {
			opacity: .5;
			pointer-events: none;
		}

		&:hover {
			background-color: $color--dark-green-1;
		}
	}
}