// HEADER.SCSS
// -- sections/header.liquid

/*  HEADER : Core Styles
 * ---------------------------------------------- */
#header-section {
    position: relative;
    margin-top: 0 !important; //The sticky nav plugin adds margin to the parent but isn't necessary, this prevents it. 
}



/*  ANNOUNCEMENT TOP BAR (Promos on top of nav)
 * ---------------------------------------------- */
#top-bar-bg {
    width: 100%;
    height: 40px;
    z-index: 100;
    position: absolute;
    @include inline-flex;

    #bg-1,
    #bg-2 {
        width: 100%;
        height: 100%;
    }

    #bg-2 {
        display: none;
    }

    @include mq( 'tablet-and-up' ) {
        &.double-promo {
            #bg-1,
            #bg-2 {
                display: inline-block;
                width: 50%;
            }
        }
    }
}


#top-bar {
    font-family: $sans;
    font-weight: $font-weight--book;
    position: relative;
    z-index: 200;

    .row {
        height: 100%;
        width: 100%;
        max-width: 1400px;
        position: relative;
    }

    a {
        text-decoration: none;
        cursor: pointer;
        width: 100%;
    }

    .bold { font-weight: $font-weight--bold; }
}




// PROMO : ONE : Single, full-bar promo is displayed
#single-promo-wrapper {
    @include flexbox;
    @include align-items( center );
    @include justify-content( center );
    height: 100%;
    width: 100%;
    font-size: {{ settings.announcement_text_size }}px;
    line-height: calc( {{ settings.announcement_text_size }}px + 4px );

    div { 
        display: inline-block; 
    }
}




// PROMOS : TWO : Two promos displayed side by side with animation on mobile sizes
#double-promo-wrapper {
    @include inline-flex;
    @include flex-flow( row wrap );
    @include justify-content( space-evenly ); //Horizontally
    @include align-items( center ); //Vertically
    width: 100%;
    height: 100%;
    font-size: calc( {{ settings.announcement_text_size }}px - 3px );
    line-height: calc( {{ settings.announcement_text_size }}px + 4px ); // Aligns the lines cleaner

    /* TABLET : Adjust tablet portrait font to fit prettier in space */
    @include mq( 'tablet-and-up' ) {
        font-size: calc( {{ settings.announcement_text_size }}px - 4px );
        line-height: calc( {{ settings.announcement_text_size }}px - 4px );
    }

    /* DESKTOP : Adjust tablet portrait font to fit prettier in space */
    @include mq( 'lap-and-up' ) {
        font-size: {{ settings.announcement_text_size }}px;
        line-height: {{ settings.announcement_text_size }}px;
    }

    .promo-banner {
        opacity: 0;
        width: 100%;
        position: absolute; 
        transition: 0.5s all ease-in-out;
        padding: 0 36px;

        &.one { opacity: 1; }

        div { display: inline-block; }//So any "bold" sections sit inline with the rest of unbolded text
    }

    #promo-arrow-left,
    #promo-arrow-right {
        position: absolute;
        @include flexbox;
        @include align-items( center );
        cursor: pointer;
        height: 100%;
        width: 23px;
        top: 50%;
        transform: translateY( -50% );

        svg {
            width: 10px;
            height: 10px;
        }
    }
    #promo-arrow-left {
        left: 0;
        @include justify-content( flex-end );
    }
    #promo-arrow-right {
        right: 0;
        @include justify-content( flex-start );
    }


    // ALTERNATIVE : Animation class for mobile banner swaps, if they want to hide arrows and it just auto-rotates
    &.auto-swap {
        .one { animation: 10s promoFade1 0s linear infinite; }
        .two { animation: 10s promoFade2 5s linear infinite; }
    }

    // Static Classes so user can manually swap the banners using arrows. (Arrow click removes auto-swap class)
    &.show-promo-two .promo-banner {
        &.one { opacity: 0; }
        &.two { opacity: 1; }
    }

    // TABLET + HIGHER
    @include mq( 'tablet-and-up' ) {
        @include flex-flow( row nowrap );

        // DISABLE : Animation on Tablet + since both are displayed at same time
        &.auto-swap {
            .one { animation: none; }
            .two { animation: none; }
        }

        // DISABLE : Arrows on Tablet & Greater
        #promo-arrow-left,
        #promo-arrow-right {
            display: none;
        }

        .promo-banner.one,
        .promo-banner.two {
            opacity: 1;
            width: 50%;
            padding: 0;
            position: relative;
        }
        &.show-promo-two .promo-banner {
            &.one { opacity: 1; }
            &.two { opacity: 1; }
        }
    }
}

// MOBILE : Fade animation for promo banners when 2 are displayed
@keyframes promoFade1 {
    0%  { opacity: 0; }
    5%  { opacity: 1; }
    50% { opacity: 1; }
    55% { opacity: 0; }
}
// MOBILE : Fade animation for promo banners when 2 are displayed
@keyframes promoFade2 {
    5%  { opacity: 0; }
    10% { opacity: 1; }
    45% { opacity: 1; }
    50% { opacity: 0; }
}







/*  NAV : OVERALL NAV STYLES
 * ---------------------------------------------- */
#nav-bar-wrapper {
    position: relative;
    z-index: 1000;
    height: 50px;
    width: 100%;
    padding: 0;
    box-shadow: 0px 1px 9px #8d8d8d; //TODO : VARIBALIZE in SETTINGS
    
    /* NAV BG :
     * 
     * Why? Because it lets use use rotated, box-shadows on logo
     * to make a mobile sticky nav with a nice minor box shadow
     * ---------------------------------------------- */
    #nav-bar-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: {{ settings.header_background }};
    }

    #nav-bar {
        position: relative;
        width: 100%;
        height: 100%;
        max-width: 1400px;
    }


    /*  NAV : LOGO :
     * ---------------------------------------------- */
    #nav-logo,
    #nav-logo-backing {
        position: absolute;
        @include flexbox;
        @include justify-content( center );
        @include align-items( center );
        width: 70px;
        height: 70px;
        left: 50%;
        transform: translateX( -50% ) rotateZ( 45deg );
        background: {{ settings.header_background }};
        top: 15px;

        a {
            transform: rotateZ( -45deg );
        }

        a,
        svg {
            width: 120%;
            height: 120%;
            position: relative;
            left: -5px;
            top: -3px;
        }
    }

    // SHADOW : This gives the sticky nav a box shadow on the logo point
    #nav-logo-backing {
        transform: translateX( -50% ) rotateZ( 45deg );
        box-shadow: 0px 1px 9px #8d8d8d; //TODO : VARIBALIZE in SETTINGS
        background: {{ settings.header_background }};
        z-index: -1; //Relative to #nav-bar-wrapper, so its -1 on the 1000 layer.
    }




    /*  NAV : ACCOUNT + CART + SEARCH + SITE PICKER (Right Elements)
     * ---------------------------------------------- */
    #nav-user {

        // Account / Cart / Site Picker List
        ul#nav-user-list {
            @include inline-flex;
            @include justify-content( flex-end );
            position: absolute;
            right: $navMobileGutter;
            height: 100%;
            list-style: none;
            text-align: right;

            .nav-item {
                @include inline-flex;
                @include align-items( center );
                @include justify-content( center );

                a {
                    @include inline-flex;
                    @include align-items( center );
                    @include justify-content( center );
                    width: 100%;
                    height: 100%;
                    padding: 0 7px;
                    text-decoration: none;
                }

                svg {
                    width: 19px;
                    height: 17px;
                }

                i {
                    @include inline-flex;
                    @include align-items( center );
                    font-size: 20px;
                    height: 100%;
                }
            }


            // INTERNATIONAL : Sites Picker
            .nav-sites,
            .nav-currency {
                display: none;

                @include mq( 'tablet-and-up' ) {
                    display: inline-block;
                }
            }


            // ACCOUNT : User account item
            .nav-account {
                width: 46px;
            }


            // CART 
            .nav-cart {
                color: $color--dark-green-1;

                i.fa, // Support bag font-icon for now..
                .icon-cart {
                    margin-right: 8px; // Space icon from cart #
                }

                .cart-count {
                    font-weight: bold;
                }
            }
        }
    }



    /*  NAV : SITE-COLLECTIONS (Left Elements)
     * ---------------------------------------------- */
    #nav-collections {
        .icon-nav-mobile-menu {
            position: absolute;
            left: $navMobileGutter;
            width: 30px;
            height: 15px;
            top: 50%;
            transform: translateY(-50%);

            .bar {
                position: absolute;
                background: $color--dark-green-1;
                width: 100%;
                height: 2px;

                &.one   { top: 0; }
                &.two   { 
                    top: 50%;  
                    transform: translateY( -50% ) 
                }
                &.three { 
                    width: 70%;
                    top: 100%; 
                    transform: translateY( -50% ) 
                }
            }
        }
    }
}


