#page_contest_success {
    .page-content-field {
        position: relative;

        .contest-success-text {
            margin: 20px auto;
            padding: 50px 80px;
            text-align: left;
            width: 100%;

            h1, h2, h3, h4, h5, h6 {
                font-family: $font-stack--heading;
                margin: 10px auto;
            }

            h1, h2, h3 {
                font-weight: 800;
                letter-spacing: 0.1rem;
                color: $color--dark-green;
            }

            h4, h5, h6 {
                font-weight: 500;
                letter-spacing: 0.05rem;
            }

            h3 {
                font-size: 26px;
            }

            p {
                font-size: 16px;
            }
        }
        @include mq('phone') {
            .contest-success-text {
                padding: 20px 10px;
                text-align: left;

                h3 {
                    font-size: 18px;
                }
                p {
                    font-size: 13px;
                }
            }
        }
    }
}