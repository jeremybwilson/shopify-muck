{% if settings.display_discount_msg %}
	{{ 'jquery-2.2.4.min.js' | asset_url | script_tag }}
	<script type="text/javascript">
		var isShowOnce = 0;
		$(document).on('page:change', function() {
		  if($('.tag__wrapper .reduction-code .reduction-code__text').length > 0){
		  	var empCode = '{{ settings.discount_code}}';
		  	var empCustMsg = '{{ settings.discount_msg}}';
		  	var appliedCode = $('.tag__wrapper .reduction-code .reduction-code__text').text();
		  	if(isShowOnce == 0){
		  		console.log(empCode+'-'+appliedCode);
		  		if(appliedCode == empCode){
		  		  $('<p>'+empCustMsg+'</p>').insertAfter('.tags-list').fadeOut(5000);
		  		}
		  		isShowOnce=1;
		  	}
		  }else{
		  	isShowOnce=0;
		  }
		});
	</script>
{% endif %}